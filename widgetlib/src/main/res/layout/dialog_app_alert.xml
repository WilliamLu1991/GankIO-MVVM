<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_145"
        android:background="@drawable/shape_bg_ffffff_r10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:id="@+id/dialog_app_alert_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:text="确认要退出登录吗"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_16" />

            <FrameLayout
                android:id="@+id/dialog_app_alert_fl_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/dialog_app_alert_tv_content2"
                    android:layout_width="@dimen/dp_170"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="一网乡汇"
                    android:textColor="?colorPrimary"
                    android:textSize="@dimen/dp_14" />

            </FrameLayout>


        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_app_alert_tv_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_14" />

            <include
                android:id="@+id/dialog_app_alert_line"
                layout="@layout/view_vertical_line" />

            <TextView
                android:id="@+id/dialog_app_alert_tv_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="?colorPrimary"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>