<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_42"
            android:background="@drawable/shape_bg_ffffff_r5"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_110">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130">

                <TextView
                    android:id="@+id/dialog_upgrade_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_23"
                    android:paddingRight="@dimen/dp_23"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_13" />

            </android.support.v4.widget.NestedScrollView>


            <Button
                android:id="@+id/dialog_upgrade_btn_go"
                android:layout_width="@dimen/dp_216"
                android:layout_height="@dimen/dp_38"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_17"
                android:background="@drawable/shape_bg_5fc3b7_r3"
                android:text="立即升级"
                android:stateListAnimator="@color/color_null"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/dp_15" />

        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_upgrade_iv_close"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_54"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/lib_ic_close2" />

        <ImageView
            android:layout_width="@dimen/dp_134"
            android:layout_height="@dimen/dp_119"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lib_ic_upgrade_bg" />

        <TextView
            android:id="@+id/dialog_upgrade_tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_105"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="新版本升级"
            android:textColor="@color/color_5fc3b7"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold"
            android:typeface="sans" />

    </FrameLayout>
</FrameLayout>