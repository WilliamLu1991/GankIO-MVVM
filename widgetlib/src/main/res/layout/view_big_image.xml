<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_38"
            android:text="查看图片"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_16"/>

        <FrameLayout
            android:id="@+id/bigimage_fl_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:minHeight="@dimen/dp_45"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_gravity="center_vertical"
                android:background="@drawable/lib_ic_close"/>

        </FrameLayout>

    </RelativeLayout>

    <com.williamlu.widgetlib.ximageview.XImageView
        android:id="@+id/bigimage_iv_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:doubleType="fitImageMinViewMax"
        app:initType="fitViewMinImageMin"/>

</LinearLayout>