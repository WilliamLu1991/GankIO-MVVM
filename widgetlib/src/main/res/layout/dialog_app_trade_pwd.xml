<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_320"
        android:background="@drawable/shape_bg_ffffff_r4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="输入交易密码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_14"/>

            <ImageView
                android:id="@+id/tradepwd_iv_close"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/lib_ic_close2"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="支付金额"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_14"/>

        <TextView
            android:id="@+id/tradepwd_tv_pay_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_24"
            android:gravity="center"
            android:text="¥"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_24"
            android:textStyle="bold"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_26">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tradepwd_tv_write_pwd1"
                    style="@style/TradePwdTextViewStyle"
                    android:background="@drawable/shape_bg_ffffff_s_d9d9d9"/>

                <TextView
                    android:id="@+id/tradepwd_tv_write_pwd2"
                    style="@style/TradePwdTextViewStyle"/>

                <TextView
                    android:id="@+id/tradepwd_tv_write_pwd3"
                    style="@style/TradePwdTextViewStyle"/>

                <TextView
                    android:id="@+id/tradepwd_tv_write_pwd4"
                    style="@style/TradePwdTextViewStyle"/>

                <TextView
                    android:id="@+id/tradepwd_tv_write_pwd5"
                    style="@style/TradePwdTextViewStyle"/>

                <TextView
                    android:id="@+id/tradepwd_tv_write_pwd6"
                    style="@style/TradePwdTextViewStyle"/>

            </LinearLayout>

            <EditText
                android:id="@+id/tradepwd_et_write_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textColor="@android:color/transparent"
                android:textColorHint="@android:color/transparent"
                android:textCursorDrawable="@null"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tradepwd_tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/dp_26"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_26"
            android:paddingBottom="@dimen/dp_12"
            android:text="忘记密码?"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp_12"/>

        <Button
            android:id="@+id/tradepwd_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_26"
            android:background="@drawable/shape_bg_02af66_r3"
            android:text="确认"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_16"/>

    </LinearLayout>
</FrameLayout>